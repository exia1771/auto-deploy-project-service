<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="github.exia1771.deploy.common.mapper.UserMapper">

    <update id="batchUpdateDeptId" parameterType="java.util.List">

        <foreach collection="list" item="item" index="index" open="" close="" separator=";">
            update user
            <set>
                dept_id = #{item.deptId}
            </set>
            where id = #{item.id}
        </foreach>

    </update>

</mapper>
